<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyLoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginbackground"
        android:scaleType="fitXY"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/loginlogo"
        android:alpha="0.9"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"/>
   <EditText
       android:textColor="@color/main_blacktext"
       android:id="@+id/et_username"
       android:drawableLeft="@drawable/userlogo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/bg_loginuserandpasswd"
       android:layout_marginTop="40dp"
       android:textSize="15dp"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="50dp"
       android:alpha="0.8"
       android:hint="用 户 名"
       android:padding="10dp"
       android:textColorHint="#000" />
    <EditText
        android:textColor="@color/main_blacktext"
        android:id="@+id/et_password"
        android:drawableLeft="@drawable/passwdlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_loginuserandpasswd"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:alpha="0.8"
        android:hint="密 码"
        android:padding="10dp"
        android:textColorHint="#000"
        android:inputType="textPassword"/>'
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <CheckBox
            android:id="@+id/cb_remember_password"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"/>
        <CheckBox
            android:id="@+id/cb_remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住用户"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_btn_shape"
        android:alpha="0.5"
        android:text=" 登 录 "
        android:textColor="#fff"
        />

</LinearLayout>
</android.support.constraint.ConstraintLayout>