<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainviewpager"
        android:layout_above="@+id/mainradiogroup">
    </android.support.v4.view.ViewPager>
        <RadioGroup
            android:id="@+id/mainradiogroup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/main_color"
            android:layout_alignParentBottom="true">
            <RadioButton
                android:button="@null"
                android:onClick="onclick"
                android:id="@+id/mainhome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/main_01"
                android:text="主页"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>
            <RadioButton
                android:button="@null"
                android:onClick="onclick"
                android:id="@+id/mainclassify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/main_02"
                android:text="分类"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>
            <RadioButton
                android:button="@null"
                android:onClick="onclick"
                android:id="@+id/mainmore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/main_03"
                android:text="更多"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>
        </RadioGroup>
</RelativeLayout>