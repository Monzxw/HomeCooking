<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/seachresult_picture"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/loginbackground"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/seachresult_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一碗粥"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/main_blacktext"/>
            <TextView
                android:id="@+id/seachresult_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这就是一碗粥"
                android:textColor="@color/main_blacktext"
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>
                <TextView
                    android:id="@+id/seachresult_peoplenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="好多人浏览过"
                    android:textColor="@color/main_blacktext"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"/>
                <!--<com.vondear.rxui.view.heart.RxHeartLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.vondear.rxui.view.heart.RxHeartLayout>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
